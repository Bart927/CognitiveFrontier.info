{
  "name": "cognitivefrontier-info",
  "version": "0.1.0",
  "description": "Exploring the frontier between human cognition and artificial intelligence",
  "keywords": [
    "cognitive science",
    "artificial intelligence",
    "neuroscience",
    "psychology",
    "next.js",
    "react",
    "typescript"
  ],
  "private": true,
  "scripts": {
    "dev": "bun --bun next dev",
    "build": "bun --bun next build",
    "start": "bun --bun next start",
    "lint": "bun --bun next lint",
    "lint:fix": "bun --bun next lint --fix",
    "format": "bun prettier --write .",
    "format:check": "bun prettier --check .",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "type-check": "bun tsc --noEmit",
    "clean": "rm -rf .next",
    "prepare": "husky install",
    "dev:npm": "next dev",
    "build:npm": "next build"
  },
  "author": "CognitiveFrontier Team",
  "license": "MIT",
  "dependencies": {
    "framer-motion": "^11.15.0",
    "next": "^15.3.3",
    "next-pwa": "^5.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.4.0",
    "sass": "^1.83.0",
    "typescript": "^5.7.3",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.2"
  }
}
